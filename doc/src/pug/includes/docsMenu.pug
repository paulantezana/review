aside(itemscope="itemscope" itemtype="http://schema.org/WPSideBar" role="complementary").main-doc__aside
    .vertical-menu-toggle.to-l#vertical-menu-toggle(data-content="Filtros")
    nav(itemscope itemtype="http://schema.org/WPSideBar").vertical-menu#vertical-menu
        ul
            each val, key in sidebar
                li(itemprop="url")
                    if (key === active)
                        a(href=val itemprop="name" title= "Enlace de " + key).active= key
                    else
                        a(href=val itemprop="name" title= "Enlace de " + key)= key
